<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".ShowDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/showDetailsAppBar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorPrimaryDark"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_foreground"
                android:id="@+id/showPosterImage"
                app:layout_collapseMode="parallax"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/showDetailsToolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <ImageView
                    android:id="@+id/backNavIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_arrow"
                    android:padding="10dp"
                    android:tint="@color/color1A95AD"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolbarTitle"
                    android:text="Title"
                    android:textColor="@color/color1A95AD"
                    android:textSize="18sp"
                    android:fontFamily="@font/exo_bold"
                    android:layout_marginStart="20dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"/>
            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/showSmallPoster"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/releasedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/showSmallPoster"
                    app:layout_constraintTop_toTopOf="@+id/showSmallPoster"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/ic_calender"
                    android:text="05 May 2017"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/color1A95AD"
                    android:fontFamily="@font/exo_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/showTime"
                    app:layout_constraintStart_toStartOf="@+id/releasedDate"
                    app:layout_constraintTop_toBottomOf="@+id/releasedDate"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_show_time"
                    android:drawablePadding="10dp"
                    android:text="136 mins"
                    android:textColor="@color/color1A95AD"
                    android:fontFamily="@font/exo_medium"/>

                <TextView
                    android:id="@+id/userRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/releasedDate"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    android:drawableEnd="@drawable/ic_user_rating"
                    android:drawablePadding="10dp"
                    android:text="7.8"
                    android:gravity="center"
                    android:textColor="@color/color1A95AD"
                    android:fontFamily="@font/exo_semibold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/showLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/userRating"
                    app:layout_constraintTop_toBottomOf="@+id/userRating"
                    android:layout_marginTop="6dp"
                    android:drawableEnd="@drawable/ic_language"
                    android:drawablePadding="10dp"
                    android:text="English"
                    android:textSize="12sp"
                    android:fontFamily="@font/exo_bold"
                    android:textColor="@color/color1A95AD"
                    android:gravity="center"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:background="@color/colorE5E5E5"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/directorDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp"
                android:fontFamily="@font/exo_bold"
                android:textColor="@android:color/black"
                android:text="Director: James Gunn"/>

            <TextView
                android:id="@+id/genreDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/directorDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/exo_semibold"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:text="Genre: Action, Adventure, Comedy, Sci-Fi"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/genreDetails"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp"
                android:fontFamily="@font/exo_bold"
                android:textColor="@android:color/black"
                android:text="Show content:"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/showDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv3"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="The Guardians struggle to keep together as a team while dealing with their personal family issues, notably Star-Lord's encounter with his father the ambitious celestial being Ego."
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:fontFamily="@font/exo_semibold"
                android:layout_marginTop="6dp"
                android:background="@drawable/drawable_white_rounded_corner_background"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/showActors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/showDescription"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableStart="@drawable/ic_actor"
                android:drawablePadding="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/exo_semibold"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:background="@drawable/drawable_white_rounded_corner_background"
                android:padding="10dp"
                android:text="Chris Pratt, Zoe Saldana, Dave Bautista, Vin Diesel"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/showActors"
                app:layout_constraintStart_toStartOf="@+id/showActors"
                app:layout_constraintEnd_toEndOf="@+id/showActors"
                android:textSize="16sp"
                android:text="Writer Details:"
                android:textColor="@android:color/black"
                android:fontFamily="@font/exo_bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/writerDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/exo_medium"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_white_rounded_corner_background"
                android:padding="10dp"
                android:text="James Gunn, Dan Abnett (based on the Marvel comics by), Andy Lanning (based on the Marvel comics by), Steve Englehart (Star-Lord created by), Steve Gan (Star-Lord created by), Jim Starlin (Gamora and Drax created by), Stan Lee (Groot created by), Larry Lieber (Groot created by), Jack Kirby (Groot created by), Bill Mantlo (Rocket Raccoon created by), Keith Giffen (Rocket Raccoon created by), Steve Gerber (Howard the Duck created by), Val Mayerik (Howard the Duck created by)"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>